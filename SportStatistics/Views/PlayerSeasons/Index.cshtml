@model IEnumerable<SportStatistics.Models.PlayerSeason>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var grid = new WebGrid(source: Model, rowsPerPage: 50, ajaxUpdateContainerId: "webGrid");
}

<h2 class="myTitleComic">Table of All Player Seasons</h2>
@using (Html.BeginForm("Index", "PlayerSeasons", FormMethod.Post))
{
    <div class="search-l">
        @Html.Label("Search Player Seasons", new { @class = "myTitleText" })
        @Html.Editor("edit", new { htmlAttributes = new { @class = "search" } })
        @Html.DropDownList("myList", null, new { @class = "mySelect" })
        <button class="search-btn"></button>
    </div>
}

<div id="webGrid">
    @grid.GetHtml(
            tableStyle: "table",
            footerStyle: "myTableFooter",
            mode: WebGridPagerModes.All,
            firstText: "1 <<",
            previousText: "<",
            nextText: ">",
            lastText: ">> " + Convert.ToString(grid.PageCount),
            numericLinksCount: 6,
            columns: grid.Columns(
                    grid.Column(header: "Name Sport", format: model => model.Player.NameSportString),                    
                    grid.Column(header: "Name Player", format:
                    @<text>
                        @{string name = item.Player.Name + " " + item.Player.Surname; }
                        @Html.ActionLink(name, "Player", "Home", routeValues:
                                            new { fedSeason = 10, PlayerId = item.PlayerId }, htmlAttributes: null)
                    </text>),
                    grid.Column(header: "Name Team", format: model => model.TeamSeason.NameTeam),
                    grid.Column(header: "Season", format:
                    @<text>
                        @{
                            string name = (int)item.Season + "";
                            int seas = Convert.ToInt32(name);
                            seas++;
                            name = name + "/" + Convert.ToString(seas);
                        }
                        @name
                    </text>),
                    grid.Column(header: "GamedMatches", format: model => model.GamedMatches),
                    grid.Column(header: "Goals", format: model => model.Goals),
                    grid.Column(header: "Assists", format: model => model.Assists),                   
                    grid.Column(header: "Action", format:
                    @<text>
                        @Html.ActionLink("Edit", "Edit", new { id = item.PlayerSeasonId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.PlayerSeasonId })
                    </text>
                    )
                )
            )
</div>

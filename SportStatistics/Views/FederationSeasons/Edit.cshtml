@model SportStatistics.Models.FederationSeason

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="myTitleComic">Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="sport-delete sport-div">
        <label class="mTitle">Federation Season</label>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "myValid2" })
        @Html.HiddenFor(model => model.FederationSeasonId)

        <div>
            <div>
                @Html.Label("Name Tournament", htmlAttributes: new { @class = "myTitleText" })
            </div>
            <div>
                @Html.EditorFor(model => model.NameTournament, new { htmlAttributes = new { @class = "myContent-field" } })
                @Html.ValidationMessageFor(model => model.NameTournament, "", new { @class = "myValid2" })
            </div>
        </div>

        <div>
            <div>
                @Html.Label("Tournament", htmlAttributes: new { @class = "myTitleText" })
            </div>
            <div>
                @Html.EnumDropDownListFor(model => model.Tournament, htmlAttributes: new { @class = "mySelect" })                
                @Html.ValidationMessageFor(model => model.Tournament, "", new { @class = "myValid2" })
            </div>
        </div>
        <br class="clear" />        
    </div>
}
<p class="mid">
    <input type="submit" value="Save" class="myButtonInfo" />        
</p>
<div class="sport-create-l">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "myLinkBack" })
</div>

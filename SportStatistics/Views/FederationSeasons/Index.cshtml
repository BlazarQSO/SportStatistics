@model IEnumerable<SportStatistics.Models.FederationSeason>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var grid = new WebGrid(source: Model, rowsPerPage: 50, ajaxUpdateContainerId: "webGrid");
}

<h2 class="myTitleComic">Table of all Federation Seasons</h2>

@using (Html.BeginForm("Index", "FederationSeasons", FormMethod.Post))
{
    <div class="search-l">
        @Html.Label("Search Federation Seasons", new { @class = "myTitleText" })
        @Html.Editor("edit", new { htmlAttributes = new { @class = "search" } })
        @Html.DropDownList("myList", null, new { @class = "mySelect" })
        <button class="search-btn"></button>
    </div>
}

<div id="webGrid">
    @grid.GetHtml(
            tableStyle: "table",
            footerStyle: "myTableFooter",
            mode: WebGridPagerModes.All,
            firstText: "1 <<",
            previousText: "<",
            nextText: ">",
            lastText: ">> " + Convert.ToString(grid.PageCount),
            numericLinksCount: 6,
            columns: grid.Columns(
                    grid.Column(header: "Name Sport", format: model => model.SportFederation.NameSportString),
                    grid.Column("Federation", format: model => model.SportFederation.Country),
                    grid.Column(header: "Tournament", format: model => model.TournamentString),
                    grid.Column(header: "Name Tournament", format: model => model.NameTournament),
                    grid.Column(header: "Season", format:
                    @<text>
                        @{
                            string name = (int)item.Season + "";
                            int seas = Convert.ToInt32(name);
                            seas++;
                            name = name + "/" + Convert.ToString(seas);
                        }
                        @name
                    </text>),
                    grid.Column(header: "Action", format:
                    @<text>
                        @Html.ActionLink("Delete", "Delete", new { id = item.FederationSeasonId })
                    </text>
                    )
                )
            )
</div>


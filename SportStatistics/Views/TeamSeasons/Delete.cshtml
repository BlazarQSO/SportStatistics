@model SportStatistics.Models.TeamSeason

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="myTitleComic">Delete</h2>

<div class="sport-delete">
    <h3 class="myValid2">Are you sure you want to delete this?</h3>
    <label class="mTitle">TeamSeason</label>
    <hr />
    <dl>
        <dt class="myTitleText">
            @Html.DisplayName("Name Sport")
        </dt>

        <dd class="myContent2-title">
            @Html.DisplayFor(model => model.Team.NameSportString)
        </dd>

        <dt class="myTitleText">
            @Html.DisplayName("Federation")
        </dt>

        <dd class="myContent2-title">
            @Html.DisplayFor(model => model.FederationSeason.SportFederation.Country)
        </dd>

        <dt class="myTitleText">
            @Html.DisplayName("Tournament")
        </dt>

        <dd class="myContent2-title">
            @Html.DisplayFor(model => model.FederationSeason.TournamentString)
        </dd>
        
        <dt class="myTitleText">
            @Html.DisplayName("Tournament Name")
        </dt>

        <dd class="myContent2-title">
            @Html.DisplayFor(model => model.FederationSeason.NameTournament)
        </dd>

        <dt class="myTitleText">
            @Html.DisplayName("Name Team")
        </dt>

        <dd class="myContent2-title">
            @Html.DisplayFor(model => model.NameTeam)
        </dd>

        <dt class="myTitleText">
            @Html.DisplayName("Season")
        </dt>

        <dd class="myContent2-title">
            @{
                string name = (int)Model.Season + "";
                int seas = Convert.ToInt32(name);
                seas++;
                name = name + "/" + Convert.ToString(seas);
            }
            @name
        </dd>

        <dt class="myTitleText">
            @Html.DisplayNameFor(model => model.Played)
        </dt>

        <dd class="myContent2-title">
            @Html.DisplayFor(model => model.Played)
        </dd>

        <dt class="myTitleText">
            @Html.DisplayName("Home Played")
        </dt>

        <dd class="myContent2-title">
            @Html.DisplayFor(model => model.HomePlayed)
        </dd>

        <dt class="myTitleText">
            @Html.DisplayNameFor(model => model.Point)
        </dt>

        <dd class="myContent2-title">
            @Html.DisplayFor(model => model.Point)
        </dd>

        <dt class="myTitleText">
            @Html.DisplayName("Home Point")
        </dt>

        <dd class="myContent2-title">
            @Html.DisplayFor(model => model.HomePoint)
        </dd>

        <dt class="myTitleText">
            @Html.DisplayNameFor(model => model.Win)
        </dt>

        <dd class="myContent2-title">
            @Html.DisplayFor(model => model.Win)
        </dd>

        <dt class="myTitleText">
            @Html.DisplayName("Home Win")
        </dt>

        <dd class="myContent2-title">
            @Html.DisplayFor(model => model.HomeWin)
        </dd>

        <dt class="myTitleText">
            @Html.DisplayNameFor(model => model.Draw)
        </dt>

        <dd class="myContent2-title">
            @Html.DisplayFor(model => model.Draw)
        </dd>

        <dt class="myTitleText">
            @Html.DisplayName("Home Draw")
        </dt>

        <dd class="myContent2-title">
            @Html.DisplayFor(model => model.HomeDraw)
        </dd>

        <dt class="myTitleText">
            @Html.DisplayNameFor(model => model.Lose)
        </dt>

        <dd class="myContent2-title">
            @Html.DisplayFor(model => model.Lose)
        </dd>

        <dt class="myTitleText">
            @Html.DisplayName("Home Lose")
        </dt>

        <dd class="myContent2-title">
            @Html.DisplayFor(model => model.HomeLose)
        </dd>

        <dt class="myTitleText">
            @Html.DisplayNameFor(model => model.Goals)
        </dt>

        <dd class="myContent2-title">
            @Html.DisplayFor(model => model.Goals)
        </dd>

        <dt class="myTitleText">
            @Html.DisplayName("Home Goals")
        </dt>

        <dd class="myContent2-title">
            @Html.DisplayFor(model => model.HomeGoals)
        </dd>

        <dt class="myTitleText">
            @Html.DisplayName("Goal Against")
        </dt>

        <dd class="myContent2-title">
            @Html.DisplayFor(model => model.GoalAgainst)
        </dd>

        <dt class="myTitleText">
            @Html.DisplayName("Home Goal Against")
        </dt>

        <dd class="myContent2-title">
            @Html.DisplayFor(model => model.HomeGoalAgainst)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div>
            <input type="submit" value="Delete" class="myButtonDelete" />
            <b> | </b>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "myLinkBack" })
        </div>
    }
</div>

@model IEnumerable<SportStatistics.Models.TeamSeason>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="myTitleComic">Table of all Team Seasons</h2>

<table class="table">
    <tr>        
        <th>
            @Html.DisplayName("NameSport")
        </th>
        <th>
            @Html.DisplayName("Federation")
        </th>
        <th>
            @Html.DisplayName("Tournament")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameTeam)
        </th>
        <th>
            @Html.DisplayName("Season")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Played)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomePlayed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Point)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomePoint)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Win)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomeWin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Draw)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomeDraw)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lose)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomeLose)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Goals)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomeGoals)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GoalAgainst)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomeGoalAgainst)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>        
        <td>
            @Html.DisplayFor(modelItem => item.Team.NameSportString)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FederationSeason.SportFederation.Country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FederationSeason.TournamentString)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameTeam)
        </td>
        <td>
            @{
                string name = (int)item.Season + "";
                int seas = Convert.ToInt32(name);
                seas++;
                name = name + "/" + Convert.ToString(seas);
            }
            @name
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Played)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomePlayed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Point)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomePoint)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Win)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomeWin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Draw)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomeDraw)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lose)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomeLose)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Goals)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomeGoals)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GoalAgainst)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomeGoalAgainst)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TeamSeasonId })             
            @Html.ActionLink("Delete", "Delete", new { id=item.TeamSeasonId })
        </td>
    </tr>
}

</table>

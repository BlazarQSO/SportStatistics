@model SportStatistics.Models.Team

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="myTitleComic">Create</h2>

@using (Html.BeginForm("Create", "Teams", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="sport-delete sport-div">
        <label class="mTitle">Team</label>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "myValid2" })

        <div>
            <div>
                @Html.Label("Name Sport", htmlAttributes: new { @class = "myTitleText" })
            </div>
            <div>
                @Html.EnumDropDownListFor(model => model.NameSport, htmlAttributes: new { @class = "mySelect" })
            </div>
        </div>

        <div>
            <div>
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "myTitleText" })
            </div>
            <div>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "myContent-field" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "myValid2" })
            </div>
        </div>

        <div>
            <div>
                @Html.LabelFor(model => model.Country, htmlAttributes: new { @class = "myTitleText" })
            </div>
            <div>
                @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "myContent-field" } })
                @Html.ValidationMessageFor(model => model.Country, "", new { @class = "myValid2" })
            </div>
        </div>

        <div>
            <div>
                @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "myTitleText" })
            </div>
            <div>
                @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "myContent-field" } })
                @Html.ValidationMessageFor(model => model.City, "", new { @class = "myValid2" })
            </div>
        </div>

        <div>
            <div>
                @Html.Label("Name Stadium", htmlAttributes: new { @class = "myTitleText" })
            </div>
            <div>
                @Html.EditorFor(model => model.NameStadium, new { htmlAttributes = new { @class = "myContent-field" } })
                @Html.ValidationMessageFor(model => model.NameStadium, "", new { @class = "myValid2" })
            </div>
        </div>

        <div>
            <div>
                @Html.Label("Foundation Date", htmlAttributes: new { @class = "myTitleText" })
            </div>
            <div>
                @Html.EditorFor(model => model.FoundationDate, new { htmlAttributes = new { @class = "myContent-field" } })
                @Html.ValidationMessageFor(model => model.FoundationDate, "", new { @class = "myValid2" })
            </div>
        </div>

        <div>
            <div>
                @Html.Label("Upload a photo", htmlAttributes: new { @class = "myTitleText" })
            </div>            
            <div>
                <input type="file" name="upload" class="myContent-field" />                
                @Html.ValidationMessageFor(model => model.TeamId, "", new { @class = "myValid2" })
            </div>
        </div>
    </div>
    <br class="clear" />
    <p class="mid">
        <input type="submit" value="Create" class="myButtonInfo" />
    </p>
}

<div class="sport-create-l">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "myLinkBack" })
</div>

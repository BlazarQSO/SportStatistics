@model IEnumerable<SportStatistics.Models.Team>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var grid = new WebGrid(source: Model, rowsPerPage: 50, ajaxUpdateContainerId: "webGrid");
}

<h2 class="myTitleComic">Table of all Teams</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "myLink2" })
</p>
@using (Html.BeginForm("Index", "Teams", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="search-l">
        <div class="search-size-m">
            @Html.Label("Search Teams", new { @class = "myTitleText" })
        </div>
        <div>
            @Html.Editor("edit", new { htmlAttributes = new { @class = "search" } })
        </div>
        <div>
            <button class="search-btn"></button>
        </div>
    </div>
}

<div id="webGrid" class="team-gread">
    @grid.GetHtml(
            tableStyle: "table",
            footerStyle: "myTableFooter",
            mode: WebGridPagerModes.All,
            firstText: "1 <<",
            previousText: "<",
            nextText: ">",
            lastText: ">> " + Convert.ToString(grid.PageCount),
            numericLinksCount: 6,
            columns: grid.Columns(
                    grid.Column(header: "Name Sport", format: model => model.NameSport),
                    grid.Column(header: "Name", format:
                    @<text>
                        @{string name = item.Name; }
                        @Html.ActionLink(name, "Team", "Home", routeValues:
                                    new { fedSeason = 10, TeamId = item.TeamId },
                                    htmlAttributes: null)
                    </text>),
                    grid.Column(header: "Country", format: model => model.Country),
                    grid.Column(header: "City", format: model => model.City),
                    grid.Column(header: "Name Stadium", format: model => model.NameStadium),
                    grid.Column(header: "Foundation Date", format: model => model.FoundationDate),                    
                    grid.Column(header: "Action", format:
                    @<text>
                        @Html.ActionLink("Edit", "Edit", new { id = item.TeamId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.TeamId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.TeamId })
                    </text>
                    )
                )
            )
</div>

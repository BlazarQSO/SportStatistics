            <div>
                @Html.EditorFor(model => model.Nationality, new { htmlAttributes = new { @class = "myContent-field" } })
                @Html.ValidationMessageFor(model => model.Nationality, "", new { @class = "myValid2" })
            </div>
        </div>

        <div>
            <div>
                @Html.LabelFor(model => model.Weight, htmlAttributes: new { @class = "myTitleText" })
            </div>

@model SportStatistics.Models.Player

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="myTitleComic">Edit</h2>

@using (Html.BeginForm("Edit", "Players", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="team-imgE">
        <img src="@String.Concat("/images/players/", Convert.ToString(Model.PlayerId), ".jpg")" onerror="this.src = '/images/icon/empty.jpg'" class="imageEdit" alt="" />
    </div>
    <div class="sport-delete sport-div">
        <label class="mTitle">Player</label>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "myValid2" })
        @Html.HiddenFor(model => model.PlayerId)

        <div>
            <div>
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "myTitleText" })
            </div>
            <div>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "myContent-field" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "myValid2" })
            </div>
        </div>

        <div>
            <div>
                @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "myTitleText" })
            </div>

            </div>
        </div>

        <div>
            <div>
                @Html.LabelFor(model => model.Age, htmlAttributes: new { @class = "myTitleText" })
            </div>
            <div>
                @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "myContent-field", @type = "number", @min = 0 } })
                @Html.ValidationMessageFor(model => model.Age, "", new { @class = "myValid2" })
            </div>
        </div>

        <div>
            <div>
                @Html.LabelFor(model => model.Nationality, htmlAttributes: new { @class = "myTitleText" })

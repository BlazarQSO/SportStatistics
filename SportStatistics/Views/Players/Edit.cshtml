                @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "myValid2" })
            </div>
        </div>

        <div>
            <div>
                @Html.LabelFor(model => model.Height, htmlAttributes: new { @class = "myTitleText" })
            </div>
            <div>
                @Html.EditorFor(model => model.Height, new { htmlAttributes = new { @class = "myContent-field", @type = "number", @min = 0 } })
                @Html.ValidationMessageFor(model => model.Height, "", new { @class = "myValid2" })
            </div>
        </div>

        <div>
            <div>
                @Html.Label("Upload a photo", htmlAttributes: new { @class = "myTitleText" })
            </div>
            <div>
                <input type="file" name="upload" class="myContent-field" />
                @Html.ValidationMessageFor(model => model.PlayerId, "", new { @class = "myValid2" })
            </div>
        </div>

        <br class="clear" />        
    </div>
    <p class="mid">
        <input type="submit" value="Save" class="myButtonInfo" />
    </p>

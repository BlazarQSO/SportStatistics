
@{
    ViewBag.Title = "AddData";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Data</h2>
@using (Html.BeginForm("AddData", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>
        <div class="half">
            <div class="add-obj">
                @Html.Label("Add a sport")
                <div>
                    @Html.ActionLink("Create", "Create", "Sports")
                    @Html.Label(" | ")
                    @Html.ActionLink("Show", "Index", "Sports")
                </div>                
            </div>
            <div class="add-obj">
                @Html.Label("Add a sport federation")
                <div>
                    @Html.ActionLink("Create", "Create", "SportFederations")
                    @Html.Label(" | ")
                    @Html.ActionLink("Show", "Index", "SportFederations")
                </div>
                <div>
                    <input type="file" name="filesSF" multiple/>
                    <button>Add</button>
                </div>
            </div>
            <div class="add-obj">
                @Html.Label("Add a player")
                <div>
                    @Html.ActionLink("Create", "Create", "Players")
                    @Html.Label(" | ")
                    @Html.ActionLink("Show", "Index", "Players")
                </div>
                <div>
                    <input type="file" name="filesP" multiple/>
                    <button>Add</button>
                </div>
            </div>
            <div class="add-obj">
                @Html.Label("Add a team")
                <div>
                    @Html.ActionLink("Create", "Create", "Teams")
                    @Html.Label(" | ")
                    @Html.ActionLink("Show", "Index", "Teams")
                </div>
                <div>
                    <input type="file" name="filesT" multiple/>
                    <button>Add</button>
                </div>
            </div>            
        </div>
        <div class="half">
            <div class="add-obj">
                @Html.Label("Add a play season  of the Federation")
                <div>
                    @Html.ActionLink("Create", "Create", "FederationSeasons")
                    @Html.Label(" | ")
                    @Html.ActionLink("Show", "Index", "FederationSeasons")
                </div>
                <div>
                    <input type="file" name="filesFS" multiple/>
                    <button>Add</button>
                </div>
            </div>
            <div class="add-obj">
                @Html.Label("Add a Team season")
                <div>
                    @Html.ActionLink("Create", "Create", "TeamSeasons")
                    @Html.Label(" | ")
                    @Html.ActionLink("Show", "Index", "TeamSeasons")
                </div>
                <div>
                    <input type="file" name="filesTS" multiple/>
                    <button>Add</button>
                </div>
            </div>
            <div class="add-obj">
                @Html.Label("Add a Player season")
                <div>
                    @Html.ActionLink("Create", "Create", "PlayerSeasons")
                    @Html.Label(" | ")
                    @Html.ActionLink("Show", "Index", "PlayerSeasons")
                </div>
                <div>
                    <input type="file" name="filesPS" multiple />
                    <button>Add</button>
                </div>
            </div>            
            <div class="add-obj">
                @Html.Label("Add a match")
                <div>
                    @Html.ActionLink("Create", "Create", "Matches")
                    @Html.Label(" | ")
                    @Html.ActionLink("Show", "Index", "Matches")
                </div>
                <div>
                    <input type="file" name="filesM" multiple/>
                    <button>Add</button>
                </div>
            </div>
        </div>        
    </div>    
    @Html.ActionLink("Example", "Example", "Home")
}

